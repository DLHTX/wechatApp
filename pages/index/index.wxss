.joke .joke-comment .joke-comment-head image{
    width:30px;
    height:30px;
    border-radius:50%;
    float:left;
}
.joke .joke-comment .joke-comment-head .joke-comment-name{
    display:inline-block;
    text-align:left;
    width:85%;
    height:30px;
    line-height:30px;    
}
.joke .joke-comment .joke-comment-content{
    text-align:left;
    padding-left:40px;
}
.joke .joke-bottom{
    width:100%;
    margin-top:5px;
}
.joke .joke-bottom div{
