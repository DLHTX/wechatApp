.joke{
    background:white;
    padding:10px 15px;
    margin-bottom:5px;
}
.joke .joke-head image{
    height:40px;
    width:40px;
    border-radius:50%;
    display:inline-block;
    float:left;
}
.joke .joke-head div{
    display:inline-block
}
.joke .joke-head div{
    display:inline-block;
    width:80%;
    text-align:left;
}
.joke .joke-head .joke-head-time{
    color:#999;
    font-size:14px;

}

.joke .joke-content .joke-content-name{
    text-align:left;
    padding:10px 0;
}
.joke .joke-content video{
    width: 100%;
}
.joke .joke-comment{
    background:whitesmoke;
    padding:10px;
    border-radius:5px;
}
.joke{
    /* height: 100%; */
